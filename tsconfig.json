{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": false,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "components/transaction-graph/**/*.ts",
    "components/transaction-graph/**/*.tsx",
    "components/NavbarInteractive.tsx",
    "components/ui/badge.tsx",
    "components/ui/button.tsx",
    "components/ui/dropdown-menu.tsx",
    "next-env.d.ts",
    "types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "agent_notes/**/*",
    "e2e/**/*",
    "__tests__/**/*",
    "tests/**/*",
    "__mocks__/**/*",
    "playwright-report/**/*",
    "test-results/**/*",
    "lib/ai/**/*",
    "lib/chains/**/*",
    "lib/anthropic-proxy/**/*",
    "components/debug/**/*",
    "components/dashboard/**/*",
    "components/performance/**/*",
    "components/export/**/*",
    "components/sso/**/*",
    "lib/error-handling/**/*",
    "lib/caching/**/*",
    "lib/voice/**/*",
    "components/voice/**/*",
    "lib/white-label/**/*",
    "components/white-label/**/*",
    "lib/analytics/**/*",
    "lib/opensvm-rpc-broken.ts",
    "lib/optimistic-ui/**/*",
    "lib/solana-connection-server.ts",
    "lib/api/**/*",
    "components/search/SmartSearchSystem.tsx",
    "components/settings/**/*",
    "lib/dashboard/**/*",
    "components/ai/**/*",
    "lib/ai/**/*",
    "components/transaction-graph/__tests__/**/*",
    "components/transaction-graph/data-fetching.ts",
    "components/transaction-graph/hooks/useNavigationHistory.ts"
  ]
}
