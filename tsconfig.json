{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@sacred/*": ["../www-sacred/components/*"],
      "@components/*": ["./app/styles/*"],
      "@common/*": ["../www-sacred/common/*"]
    },
    "baseUrl": ".",
    "types": ["react", "react-dom"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../www-sacred/components/**/*.ts",
    "../www-sacred/components/**/*.tsx",
    "../www-sacred/common/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
