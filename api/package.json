{
  "name": "@openSVM/dflow-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Prediction Market Metadata API - Access comprehensive prediction market data through 24 specialized tools",
  "type": "module",
  "module": "src/index.ts",
  "displayName": "DFlow MCP Server",
  "homepage": "https://dflow.opensvm.com",
  "icon": "https://dflow.opensvm.com/icon.svg",
  "repository": {
    "type": "git",
    "url": "https://github.com/openSVM/dflow-mcp.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prediction-markets",
    "dflow",
    "api",
    "trading",
    "analytics",
    "solana"
  ],
  "author": "openSVM",
  "license": "MIT",
  "bin": {
    "create-mcp-server": "./bin/create-mcp-server.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "start:opensvm": "bun run src/opensvm-mcp.ts",
    "start:unified": "bun run src/opensvm-mcp-unified.ts",
    "start:streaming": "bun run src/opensvm-streaming.ts",
    "start:gateway": "bun run src/mcp-gateway.ts",
    "start:dynamic": "bun run src/mcp-dynamic-gateway.ts",
    "start:spec": "bun run src/mcp-spec-gateway.ts",
    "start:ws": "bun run src/mcp-websocket-transport.ts",
    "start:stream-advanced": "bun run src/mcp-streaming-advanced.ts",
    "dev": "bun run --watch src/index.ts",
    "dev:ws": "bun run --watch src/mcp-websocket-transport.ts",
    "dev:stream-advanced": "bun run --watch src/mcp-streaming-advanced.ts",
    "dev:opensvm": "bun run --watch src/opensvm-mcp.ts",
    "dev:unified": "bun run --watch src/opensvm-mcp-unified.ts",
    "dev:streaming": "bun run --watch src/opensvm-streaming.ts",
    "dev:gateway": "bun run --watch src/mcp-gateway.ts",
    "dev:dynamic": "bun run --watch src/mcp-dynamic-gateway.ts",
    "test": "bun test",
    "test:opensvm": "bun run tests/integration/test-opensvm-mcp.ts",
    "test:mcp": "bun run tests/integration/test-opensvm-mcp.ts",
    "test:advanced": "bun run tests/test-mcp-advanced.ts",
    "test:registry": "bun run tests/test-mcp-registry.ts",
    "test:protocol": "bun run tests/test-mcp-protocol.ts",
    "test:official": "bun run tests/test-official-registry.ts",
    "test:all": "bun run test:mcp && bun run test:advanced && bun run test:registry && bun run test:protocol && bun run test:official",
    "serve": "bun run src/web-server.ts",
    "deploy": "netlify deploy --prod --dir=public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "netlify-cli": "^23.12.2",
    "toml": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "playwright": "^1.57.0",
    "typescript": "^5.0.0"
  }
}
