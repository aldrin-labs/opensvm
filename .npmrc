# NPM configuration to handle peer dependency conflicts
# This file is used by npm to configure its behavior during dependency installation

# Ignore peer dependency requirements
# This resolves conflicts between canvas and jest-environment-jsdom
legacy-peer-deps=true

# Configure dependency resolution strategy
# Force dependency resolution even when there are conflicts
force=true

# Enable package-lock creation for CI/CD
package-lock=true

# Timeout settings (using modern syntax)
fetch-timeout=100000
fetch-retries=3